pipeline {
    agent {
        label 'docker-agent'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker --version'
                    dockerapp = docker.build("sandbox-app:${env.BUILD_ID}", "-f infra/Dockerfile .")
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.withRegistry('https://harbor.yuri.dev.br', '001e7a16-1498-40de-b191-bdd9d57f6f76') {
                        dockerapp.push('latest')
                        dockerapp.push("${env.BUILD_ID}")
                    }
                }
            }
        }
    }
}