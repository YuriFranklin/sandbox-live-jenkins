pipeline {
    agent {
        label 'docker-agent'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker --version'
                    dockerapp = docker.build("nexus.yuri.dev.br/sandbox-app:${env.BUILD_ID}", "-f infra/Dockerfile .")
                }
            }
        }
        stage('Pull Image') {
            steps {
                script {
                    docker.withRegistry('https://nexus.yuri.dev.br', 'NEXUS_CREDENTIAL') {
                        dockerapp.push('latest')
                        dockerapp.push("${env.BUILD_ID}")
                    }
                }
            }
        }
        stage('Update Deployment File') {
            environment {
                GIT_EMAIL = "yuri_franklin@hotmail.com"
                GIT_REPO_NAME = "sandbox-live-jenkins"
                GIT_USER_NAME = "yurifranklin"
            }
            steps {
                withCredentials([string(credentialsId: 'GITHUB_TOKEN', variable: 'GITHUB_TOKEN')]){
                    sh '''
                        git config user.email '${GIT_EMAIL}'
                        git config user.name '${GIT_USER_NAME}'
                        sed -i "s|image: nexus.yuri.dev.br/sandbox-app:.*|image: nexus.yuri.dev.br/sandbox-app:${env.BUILD_ID}|" infra/deployment.yml
                        git add infra/deployment.yml
                        git commit -m "jenkins: updated image to version ${env.BUILD_ID}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }
    }
}